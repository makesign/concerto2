<section class="viewblock">
  <header class="viewblock-header" id="users-header">
    <h1 class="default-padding">
      <%= @page.title %>
    </h1>
  </header>
  <div id="users-body" class="viewblock-cont">
    <% if File.exist?(@file_path) %>
      <%=raw @markdown.render(File.read(@file_path)) %>
    <% else %>
      <%=raw @markdown.render(@page.body) %>
    <% end %>
  </div>
</section>
