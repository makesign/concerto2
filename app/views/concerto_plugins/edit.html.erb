<section class="viewblock">
  <header class="viewblock-header">
    <h1 class="default-padding">
      <%= link_to t(:manage_model, model: ConcertoPlugin.model_name.human(count: 42)), concerto_plugins_path %> > <%= @concerto_plugin.name.titleize %>
    </h1>
  </header>
  <div class="viewblock-cont">
    <% if ENV['FROZEN'] == "1" %>
      <div id="gem-frozen">
        <%= t(:gems_frozen_warning) %>
      </div>
    <% end %>
    <%= form_for(@concerto_plugin) do |f| %>

      <%= render partial: "layouts/errors", object: @concerto_plugin %>

      <fieldset>

        <div class="clearfix">
          <div class="input checkbox">
            <%= f.check_box :enabled %> <%= f.label :enabled %>
          </div>
        </div>

        <div class="clearfix">
          <%= f.label :gem_name %>
          <div class="input">
            <%= f.text_field :gem_name, autofocus: true, class: "input-xlarge" %>
          </div>
        </div>

        <div class="clearfix">
          <%= f.label :gem_version %>
          <div class="input">
            <%= f.text_field :gem_version, class: "input-small" %>
          </div>
        </div>

        <div class="clearfix">
          <%= f.label :source %>
          <div class="input">
            <%= f.select :source, plugin_sources %>
          </div>
        </div>

        <div class="clearfix">
          <%= f.label :source_url %>
          <div class="input">
            <%= f.text_field :source_url, class: "input-xxlarge" %>
          </div>
        </div>

      </fieldset>

      <div class="submit_bar actions">
        <%= f.submit t(:update_model, model: ConcertoPlugin.model_name.human), class: "btn btn-primary" %>
        <%= link_to t(:cancel), concerto_plugins_path, class: "btn" %>
      </div>
    <% end %>

  </div>
</section>
